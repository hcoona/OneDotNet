<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard2.0</TargetFrameworks>
    <Summary>This is a file provider for HDFS through WebHDFS protocol for Microsoft.Extensions.FileProviders.</Summary>
    <Description>$(Summary)</Description>
    <PackageProjectUrl>https://github.com/hcoona/WebHdfs.Extensions.FileProviders</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hcoona/WebHdfs.Extensions.FileProviders</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>hdfs webhdfs fileprovider filesystem</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" VersionOverride="4.4.0" />
    <PackageReference Include="Newtonsoft.Json" VersionOverride="13.0.1" />
    <PackageReference Include="System.Net.Http" VersionOverride="4.3.4" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.1'">
    <PackageReference Include="Microsoft.Extensions.FileProviders.Abstractions" VersionOverride="1.1.1" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard1.1'">
    <PackageReference Include="Microsoft.Extensions.FileProviders.Abstractions" VersionOverride="2.0.0" />
  </ItemGroup>

</Project>
