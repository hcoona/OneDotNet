<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard2.0</TargetFrameworks>
    <Summary>This is a file provider for HDFS through WebHDFS protocol for Microsoft.Extensions.FileProviders.</Summary>
    <Description>$(Summary)</Description>
    <PackageProjectUrl>https://github.com/hcoona/WebHdfs.Extensions.FileProviders</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hcoona/WebHdfs.Extensions.FileProviders</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>hdfs webhdfs fileprovider filesystem</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="System.Net.Http" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Abstractions" />
  </ItemGroup>

</Project>
