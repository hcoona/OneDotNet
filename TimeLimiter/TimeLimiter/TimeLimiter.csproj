<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>$(MSBuildProjectName)</Title>
    <TargetFramework>netstandard1.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Authors>Shuai Zhang</Authors>
    <Company>Shuai Zhang</Company>
    <Description>This is an optimized time limiter for asynchronous tasks.</Description>
    <RepositoryUrl>https://github.com/hcoona/TimeLimiter</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>Concurrent, Utility</PackageTags>
    <Copyright>Copyright 2017 Shuai Zhang under GPLv3</Copyright>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/hcoona/TimeLimiter</PackageProjectUrl>
    <Version>1.0.1</Version>
    <PackageReleaseNotes>
      <![CDATA[
Tested for user code throwing exception
]]></PackageReleaseNotes>
  </PropertyGroup>

  <!-- TODO(zhangshuai.ustc): Fix it. -->
  <ItemGroup>
    <PackageReference Remove="Microsoft.CodeAnalysis.FxCopAnalyzers" />
    <PackageReference Remove="Microsoft.CodeAnalysis.BannedApiAnalyzers" />
    <PackageReference Remove="StyleCop.Analyzers" />
  </ItemGroup>

</Project>
