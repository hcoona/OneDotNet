{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "MicrosoftExtensions/FileProviders/WebHdfs/WebHdfs.Extensions.FileProviders.UnitTest/WebHdfs.Extensions.FileProviders.UnitTest.csproj"
  ],
  "labels": ["renovate"],
  "prConcurrentLimit": 1,
  "platformAutomerge": true,
  "platformCommit": true,
  "packageRules": [
    {
      "matchFiles": [
        // Manage it manually.
        "srcs/public/Directory.Packages.props"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "azure-pipelines"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": ["Grpc", "Grpc.Core", "Grpc.Core.Testing", "Grpc.Tools"],
      "groupName": "grpc_legacy"
    },
    {
      "matchPackagePrefixes": ["Microsoft.Extensions."],
      "groupName": "microsoft_extensions"
    },
    {
      "matchPackagePrefixes": ["System."],
      "groupName": "system"
    }
  ]
}
