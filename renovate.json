{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
  ],
  "labels": ["renovate"],
  "prConcurrentLimit": 1,
  "platformAutomerge": true,
  "platformCommit": true,
  "timezone": "Asia/Hong_Kong",
  // https://github.com/hcoona/OneDotNet/issues/101
  "packageRules": [
    // Manually rules.
    {
      "matchFiles": [
        // Manage it manually.
        "srcs/public/Directory.Packages.props"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": ["dotnet-sdk"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["Microsoft.Extensions."],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    // Auto-merge rules.
    {
      "extends": [
        "schedule:daily"
      ],
      "matchPackagePrefixes": [
        "Microsoft.CSharp",
        "System."
      ],
      "groupName": "system",
      "automerge": true
    },
    {
      "extends": [
        "schedule:daily"
      ],
      "matchPackagePrefixes": ["Microsoft.Extensions."],
      "matchUpdateTypes": ["minor","patch"],
      "groupName": "microsoft-extension",
      "automerge": true
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "matchFiles": [
        "Directory.Packages.props"
      ],
      "excludePackageNames": ["Microsoft.CSharp"],
      "excludePackagePrefixes": [
        "Microsoft.Extensions.",
        "System."
      ],
      "groupName": "third-party"
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "matchFiles": [
        "Directory.Packages.Global.props"
      ],
      "groupName": "global-packages",
      "automerge": true
    },
    {
      "extends": [
        "schedule:monthly"
      ],
      "matchFiles": [
        ".config/dotnet-tools.json"
      ],
      "groupName": "cli-packages",
      "automerge": true
    },
    {
      "extends": [
        "schedule:weekly"
      ],
      "matchPackageNames": [
        "DotNet.ReproducibleBuilds.Isolated",
        "Microsoft.Build.Artifacts",
        "Microsoft.Build.NoTargets",
        "Microsoft.Build.Traversal"
      ],
      "groupName": "dotnet-build-sdk",
      "automerge": true
    },
    {
      "extends": [
        "schedule:weekly"
      ],
      "matchManagers": [
        "azure-pipelines"
      ],
      "automerge": true
    },
    // Grouping only.
    {
      "matchPackageNames": ["Grpc", "Grpc.Core", "Grpc.Core.Testing", "Grpc.Tools"],
      "groupName": "grpc-legacy"
    }
  ]
}
