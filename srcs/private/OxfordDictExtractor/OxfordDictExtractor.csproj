<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="Microsoft.Build.Artifacts" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(CurrentTargetFramework)</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <DefaultArtifactsFileMatch>$(DefaultArtifactsFileMatch) wordlist.tsv.zip</DefaultArtifactsFileMatch>
    <ArtifactsPath>$(BaseArtifactsPath)\OxfordDictExtractor</ArtifactsPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" />
    <PackageReference Include="LemmaGenerator" />
    <PackageReference Include="Nito.Guids" />
    <PackageReference Include="System.IO.Compression.ZipFile" />
    <PackageReference Include="WebMarkupMin.Core" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Data\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Data\wordlist.tsv.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
